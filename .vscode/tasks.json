{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run PowerShell Script in External Terminal",
            "type": "shell",
            "command": "powershell",  // Change this to your terminal or shell, e.g., "cmd" or "bash"
            "args": [
                "-NoLogo",
                "-File",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true,
                "echo": true
            }
        }
    ]
}